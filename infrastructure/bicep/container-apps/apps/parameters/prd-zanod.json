{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fileShareQuota": {
      "value": 500
    },
    "containerImage": {
      "value": "canardleteer/zano:master-zano-runner"
    },
    "containerVolumeMounts": {
      "value": [
        {
          "volumeName": "volume",
          "mountPath": "/home/ubuntu/.Zano",
          "subPath": "data"
        }
      ]
    },
    "containerCPU": {
      "value": "2"
    },
    "containerMemory": {
      "value": "4Gi"
    },
    "containerMinReplicas": {
      "value": 1
    },
    "containerMaxReplicas": {
      "value": 1
    },
    "containerIngressTargetPort": {
      "value": 33112
    },
    "containerIngressAdditionalPorts": {
      "value": [
        {
          "external": true,
          "targetPort": 11121,
          "exposedPort": 11121
        }
      ]
    },
    "containerProbes": {
      "value": [
        {
          "type": "Startup",
          "initialDelaySeconds": 60,
          "periodSeconds": 120,
          "failureThreshold": 30,
          "successThreshold": 1,
          "tcpSocket": {
            "port": 33112
          },
          "timeoutSeconds": 5
        },
        {
          "type": "Liveness",
          "initialDelaySeconds": 30,
          "periodSeconds": 10,
          "failureThreshold": 10,
          "successThreshold": 1,
          "tcpSocket": {
            "port": 33112
          },
          "timeoutSeconds": 5
        }
      ]
    },
    "containerEnv": {
      "value": []
    },
    "containerCommand": {
      "value": []
    },
    "containerArgs": {
      "value": [
        "--rpc-bind-ip=0.0.0.0",
        "--rpc-bind-port=33112",
        "--log-level=1"
      ]
    }
  }
}