<style>
  html, body, table {
    background-color: #072440;
    color: #ffffff;
    font-family: Open Sans,Helvetica,Arial,sans-serif;
  }

  .default-text {
  }
  
  .logo {
    height: 100px;
    width: 156.25px;
  }
  
  .salutation {
    color: #f5516c;
    font-weight: 800;
    font-size: 24px;
  }
  
  .social-link {
    text-decoration: none;
  }

  .social {
    height: 15px;
  }
  
  .spacer-h {
    height: 10px;
  }
  
  .spacer-v {
    width: 10px;
  }
</style>

<html>

  <body>
    <img align='center' class='logo' src='https://dfx.swiss/wp-content/uploads/2022/07/02.03.2022_DFX_Logo_grund_dunkel_1.png' />

    <p align='center' class='salutation'>{{salutation}}</p>

    {{#each texts}}
      <p align='center' class='default-text' style='font-family:{{this.style}}'>
        
        {{{this.text}}}

        {{#if this.url}}<a style='color:white' href='{{this.url.link}}'>{{this.url.text}}</a>
          {{#if this.url.textSuffix}}{{this.url.textSuffix}}{{/if}}
        {{/if}}
        {{#if this.mail}}<a style='color:white' href='mailto:{{this.mail.address}}'>{{this.mail.address}}</a>
          {{#if this.mail.textSuffix}}{{this.mail.textSuffix}}{{/if}}
        {{/if}}
      </p>
    {{/each}}

    <table border='0' cellpadding='0' cellspacing='0' width='100%'>
      <tr class='spacer-h'></tr>
      <tr>
        <td>
          <a class='social-link' href='{{twitterUrl}}'>
            <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/twitter.png' />
          </a>
        </td>
        <td class='spacer-v'></td>
        <td>
          <a class='social-link' href='{{telegramUrl}}'>
            <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/telegram.png' />
          </a>
        </td>
        <td class='spacer-v'></td>
        <td>
          <a class='social-link' href='{{instagramUrl}}'>
            <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/instagram.png' />
          </a>
        </td>
        <td class='spacer-v'></td>
        <td>
          <a class='social-link' href='{{linkedinUrl}}'>
            <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/linkedin.png' />
          </a>
        </td>
      </tr>
      <tr class='spacer-h'></tr>
    </table>
  </body>

</html>