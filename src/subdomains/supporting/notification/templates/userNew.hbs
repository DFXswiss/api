<style>
  html, body, table {
    background-color: #072440;
    color: #ffffff;
    font-family: Open Sans,Helvetica,Arial,sans-serif;
  } 
  
  .logo {
    height: 100px;
    width: 156.25px;
  }
  
  .salutation {
    color: #f5516c;
    font-weight: 800;
    font-size: 24px;
  }
  
  .social-link {
    text-decoration: none;
  }

  .social {
    height: 15px;
  }
  
  .spacer-h {
    height: 10px;
  }
  
  .spacer-v {
    width: 10px;
  }
</style>

<html>

  <body>
    <table border='0' cellpadding='0' cellspacing='0' width='100%'>
      <tr>
        <td align='center'>
          <img class='logo' src='https://dfx.swiss/wp-content/uploads/2022/07/02.03.2022_DFX_Logo_grund_dunkel_1.png' />
        </td>
      </tr>

      <tr>
        <td align='center' class='salutation'>{{salutation}}</td>
      </tr>

      <tr class='spacer-h'></tr>

      <tr>
        <td align='center'>
          <table style='font-family:Open Sans,Helvetica,Arial,sans-serif;width:60%;padding:8px;font-size:85%' align='center'>
            {{#each table}}
              <tr>
                <td align='right'>
                  {{this.text}}
                </td>

                <td style="width:2%;">
                  
                </td>

                <td align='left'>
                  {{this.value}}
                </td>
              </tr>
            {{/each}}

            {{#each suffix}}
              <tr style='font-family:{{this.style}}'>
                <td colspan='3' align='center'>
                  
                {{{this.text}}}
                {{#if this.url}}<a style='color:white' href='{{this.url.link}}'>{{this.url.text}}</a>
                  {{#if this.url.textSuffix}}{{this.url.textSuffix}}{{/if}}
                {{/if}}
                {{#if this.mail}}<a style='color:white' href='mailto:{{this.mail.mailAddress}}'>{{this.mail.mailAddress}}</a>
                  {{#if this.mail.textSuffix}}{{this.mail.textSuffix}}{{/if}}
                {{/if}}
                </td>
              </tr>
            {{/each}}
          </table>
        </td>
      </tr>

      <tr>
        <td align='center'>

          <table>
            <tr class='spacer-h'></tr>
            <tr>
              <td>
                <a class='social-link' href='{{twitterUrl}}'>
                  <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/twitter.png' />
                </a>
              </td>
              <td class='spacer-v'></td>
              <td>
                <a class='social-link' href='{{telegramUrl}}'>
                  <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/telegram.png' />
                </a>
              </td>
              <td class='spacer-v'></td>
              <td>
                <a class='social-link' href='{{instagramUrl}}'>
                  <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/instagram.png' />
                </a>
              </td>
              <td class='spacer-v'></td>
              <td>
                <a class='social-link' href='{{linkedinUrl}}'>
                  <img class='social' src='https://dfx.swiss/wp-content/uploads/2022/07/linkedin.png' />
                </a>
              </td>
            </tr>
            <tr class='spacer-h'></tr>
          </table>
        </td>
      </tr>
    </table>
  </body>

</html>